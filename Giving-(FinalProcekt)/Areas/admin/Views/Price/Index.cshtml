@model List<Price>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<div class="container" style="border: 1px solid; padding: 25px; box-shadow: 12px 12px #bcbcbc; ">
    <div class="row justify-content-center">
        <div class="col-lg-12" style=" margin-top: 20px;">
            <a class="btn btn-instagram mb-3" asp-area="admin" asp-controller="Price" asp-action="Create">Create</a>
        </div>
        <div class="col-lg-6">
            <table class="table">
                <thead style=" text-align: center;">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Money</th>
                        <th scope="col"><i class="icon-note menu-icon"></i></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr style="text-align:center;">
                            <th style="vertical-align:middle;" scope="row">@(i+1)</th>
                            <td>@Model[i].Money</td>
                            <td>
                                <a class="btn btn-warning" asp-area="admin" asp-controller="Price" asp-action="Update" asp-route-id="@Model[i].Id"><i class="fas fa-edit"></i></a>
                                <a class="btn btn-danger" asp-area="admin" asp-controller="Price" asp-action="Delete" asp-route-id="@Model[i].Id" onclick="return confirm('Are you sure?')"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
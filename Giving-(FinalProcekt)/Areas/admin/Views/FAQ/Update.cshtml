@model FAQ
@{ ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml"; }

<form class="my-5 p-5" asp-area="Admin" asp-controller="FAQ" asp-action="Update" method="post" enctype="multipart/form-data">
    @{ if (TempData["FAQError2"] != null)
        {
<p style="font-size: 20px !important;" class="alert alert-danger">@TempData["FAQError2"]</p> TempData["FAQError2"] = null;
} }
    <div class="mb-3">
        <label asp-for="@Model.Title" class="form-label">Title</label>
        <input class="form-control" asp-for="@Model.Title">
        <span class="text-danger" asp-validation-for="@Model.Title"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Content" class="form-label">Content</label>
        <textarea class="form-control ckeditor" asp-for="@Model.Content"></textarea>
        <span class="text-danger" asp-validation-for="@Model.Content"></span>
    </div>
    <input type="hidden" asp-for="@Model.Id" />
    <button type="submit" class="btn btn-primary">Update</button>
    <button type="submit" class="btn btn-dark" asp-area="admin" asp-controller="FAQ" asp-action="Index">Back to List</button>
</form>


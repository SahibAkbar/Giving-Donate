

@model Cause
@{ ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml"; }

@{
    if (TempData["Erroor"] != null)
    {
        <div class="col-lg-3 alert alert-danger">
            <p>@(TempData["Erroor"]as string)</p>
        </div>
        TempData["Erroor"] = null;
    }
}

<form class="pl-5 pb-5 pr-5 pt-0" asp-area="Admin" asp-controller="Cause" asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="p-5 row">
        <p class="col-lg-12 mb-5 p-0 text-center text-facebook" style=" font-size: 24px !important; font-weight: 600 !important;">Cause Informations</p>
        @{ if (TempData["CauseError2"] != null)
            {
<p style="font-size: 20px !important;" class="alert alert-danger col-lg-12">@TempData["CauseError2"]</p> TempData["CauseError2"] = null;
} }
        <div class="mb-3 col-lg-12">
            <label asp-for="@Model.ImageFile" class="form-label">Choose Cause Image</label>
            <input class="form-control" asp-for="@Model.ImageFile">
            <span class="text-danger" asp-validation-for="@Model.ImageFile"></span>
        </div>

        <div class="mb-3 col-lg-4">
            <label asp-for="@Model.Title" class="form-label">Title</label>
            <input class="form-control" asp-for="@Model.Title">
            <span class="text-danger" asp-validation-for="@Model.Title"></span>
        </div>
        <div class="mb-3 col-lg-4">
            <label asp-for="@Model.Address" class="form-label">Address</label>
            <input class="form-control" asp-for="@Model.Address">
            <span class="text-danger" asp-validation-for="@Model.Address"></span>
        </div>
        <div class="col-lg-10 mb-3 offset-1">
            <label asp-for="@Model.Content" class="form-label">Content</label>
            <textarea class="form-control" asp-for="@Model.Content"></textarea>
            <span class="text-danger" asp-validation-for="@Model.Content"></span>
        </div>
    </div>

    <input type="hidden" asp-for="@Model.Id" />
    <input type="hidden" asp-for="@Model.Image" />
    <button type="submit" class="btn btn-warning">Update</button>
    <button type="submit" class="btn btn-dark" asp-area="admin" asp-controller="Cause" asp-action="Index">Back to List</button>

</form>


@model List<Cause>
@{ ViewData["Title"] = "Index";
                Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml"; }



<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center" style="font-size: 35px !important; font-weight: 600 !important; color: #3b579d !important; ">Causes</h4>
                <a class="btn btn-primary mb-3 px-5" asp-area="Admin" asp-controller="Cause" asp-action="Create">Create New <i class="fas fa-plus"></i></a>
                @{ if (TempData["CauseError"] != null)
                    {
                        <p style="font-size: 20px !important;" class="alert alert-danger">@TempData["CauseError"]</p> TempData["CauseError"] = null;
                    }
                    if (TempData["CauseError1"] != null)
                    {
                        <p style="font-size: 20px !important;" class="alert alert-danger">@TempData["CauseError1"]</p> TempData["CauseError1"] = null;
                    } 
                 }
                <div class="table-responsive">
                    <table class="table table-bordered text-center">
                        <thead>
                            <tr>
                                <th class="tableTrCustom">
                                    #
                                </th>
                                <th class="tableTrCustom">
                                    Image
                                </th>
                                <th class="tableTrCustom">
                                    Title
                                </th>
                                <th class="tableTrCustom">
                                    Address
                                </th>
                                <th class="tableTrCustom">
                                    Cause Need
                                </th>
                                <th class="tableTrCustom">
                                    Created Date
                                </th>
                                <th class="tableTrCustom">
                                    Edit
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int counter = 0;
                            foreach (var item in Model)
                            {
                                counter++;
                                 <tr>
                                     <td style="font-size: 18px !important; font-weight: 500 !important;">
                                         @counter
                                     </td>
                                     <td class="py-1" style=" width: 300px !important; height: 150px !important;">
                                         <img style="border-radius: unset !important; width: 100% !important; height: 100% !important; object-fit: contain !important;" src="~/Uploads/@item.Image" alt="image" />
                                     </td>
                                     <td style="font-size: 18px !important; width: 150px; font-weight: 500 !important;">
                                         @item.Title
                                     </td>
                                     <td style="width: 150px !important; font-size: 18px !important; font-weight: 500 !important;">
                                         @item.Address
                                     </td>
                                     <td style="width: 150px !important; font-size: 18px !important; font-weight: 500 !important;">
                                         @item.CauseNeed
                                     </td>
                                     <td style="font-size: 18px !important; width: 150px; font-weight: 500 !important;">
                                         @item.CreatedDate.ToString("MMMM,dd,yyyy")
                                     </td>
                                     <td style="width: 150px;">
                                         <a class="w-100 btn-sm btn btn-facebook" asp-route-id="@item.Id" asp-area="Admin" asp-controller="Cause" asp-action="Detail"><i class="fas fa-eye"></i></a>
                                         <br />
                                         <a class="my-2 w-100 btn-sm btn btn-warning" asp-route-id="@item.Id" asp-area="Admin" asp-controller="Cause" asp-action="Update"><i class="fas fa-edit"></i></a>
                                         <br>
                                         <a class="w-100 btn-sm btn btn-danger" asp-route-id="@item.Id" asp-area="Admin" asp-controller="Cause" asp-action="Delete" onclick="return confirm('Are you sure?')"><i class="fas fa-trash-alt"></i></a>
                                     </td>
                                 </tr>
 } }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
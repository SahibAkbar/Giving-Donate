@model List<Banner>
@{ ViewData["Title"] = "Index";
                Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml"; }

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center" style="font-size: 35px !important; font-weight: 600 !important; color: #3b579d !important; ">Banner</h4>
                <a class="btn btn-primary mb-3 px-5" asp-area="admin" asp-controller="Banner" asp-action="Create">Add New</a>
                @{ if (TempData["SocialError"] != null)
                    {
        <p style="font-size: 20px !important;" class="alert alert-danger">@TempData["SocialError"]</p> TempData["SocialError"] = null;
    } }
                <div class="table-responsive">
                    <table class="table table-bordered text-center">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Image</th>
                                <th scope="col">Name</th>
                                <th scope="col"><i style="font-weight:900;" class="icon-note menu-icon"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int counter = 0;
                                foreach (var item in Model)
                                {
                                    counter++;
                    <tr>
                        <td style="font-size: 18px !important; font-weight: 500 !important;">
                            @counter
                        </td>
                        <td><img src="~/Uploads/@item.Image" style="width: 250px" alt="Alternate Text" /></td>
                        <td style="font-size: 18px !important; font-weight: 500 !important;">
                            @item.Name
                        </td>
                        <td>
                            <a class="mb-2 w-50 btn-sm btn btn-warning" asp-route-id="@item.Id" asp-area="Admin" asp-controller="Banner" asp-action="Update"><i class="fas fa-edit"></i>    </a>
                            <br>
                            <a class="w-50 btn-sm btn btn-danger" asp-route-id="@item.Id" asp-area="Admin" asp-controller="Banner" asp-action="Delete" onclick="return confirm('Are you sure?')"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr> } }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


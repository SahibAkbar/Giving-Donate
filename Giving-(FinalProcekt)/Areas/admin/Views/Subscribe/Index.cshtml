@model List<Subscribe>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-warning mb-3" asp-area="admin" asp-controller="Subscribe" asp-action="SendMailAll">Send All Mail</a>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead style="text-align:center;">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Email</th>
                        <th scope="col">Date</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i < Model.Count + 1; i++)
                    {
                        <tr>
                            <th style="vertical-align:middle;" scope="row">@i</th>
                            <td>@Model[i - 1].Email</td>
                            <td>@Model[i - 1].CreatedDate.ToString("dd.MM.yyyy")</td>
                            <td>
                                <a class="btn btn-danger" asp-area="admin" asp-controller="Subscribe" asp-action="Delete" asp-route-id="@Model[i - 1].Id" onclick="return confirm('Are you sure?')">Delete</a>
                                <a class="btn btn-warning" asp-area="admin" asp-controller="Subscribe" asp-action="SendMail" asp-route-id="@Model[i-1].Id">Send Mail</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
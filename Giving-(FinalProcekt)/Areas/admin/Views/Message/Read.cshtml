@model Contact

@{ ViewData["Title"] = "Read";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml"; }

<div class="container">
    <div class="row justify-content-center">
        <div class="alert col-lg-10 my-5" style="background-color: #d8d8d8d1; border-radius: 20px !important;">
            <div class="align-items-center d-flex flex-lg-row justify-content-between">
                <h2 class="m-0"> @Model.Name</h2>
                <span style="font-size: 13px; color: #fff; background: #7b77fc; border-radius: 6px; padding: 6px 8px;">
                    @{ var date = (DateTime.Now - Model.CreatedDate);
                        if (date.Days == 0)
                        {
                            if (date.Hours == 0)
                            {
                                if (date.Minutes == 0)
                                { @(date.Seconds) @(" seconds before") }
                                else
                                { @(date.Minutes) @(" minutes before") }
                            }
                            else
                            { @(date.Hours) @(" hours before") }
                        }
                        else
                        { @(date.Days) @(" days before") } }
                </span>
            </div>
            <span class="text-facebook">@Model.Phone</span>
            <h6 class="mt-3 text-lg-center" style="font-size: 22px !important; color: darkblue !important;"> @Model.Email </h6>
            <p class="m-0 alert alert-link text-center" style="font-size: 18px !important;font-weight: 600 !important;font-style: italic !important;color: steelblue !important;"> @Model.Message</p>
            <a type="submit" class="btn btn-dark" asp-area="admin" asp-controller="Message" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>


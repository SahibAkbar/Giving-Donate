@model AboutOption
@{ ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml"; }


@{
    if (TempData["Erroor"] != null)
    {
        <div class="col-lg-3 alert alert-danger">
            <p>@(TempData["Erroor"]as string)</p>
        </div>
        TempData["Erroor"] = null;
    }
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="Admin" asp-controller="AboutOption" asp-action="Update" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Icon">Icon</label>
                    <input class="form-control" asp-for="@Model.Icon">
                    <span asp-validation-for="@Model.Icon" class="text-danger"></span>
                    <input class="form-control" type="hidden" asp-for="@Model.Id">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Title">Title</label>
                    <input class="form-control" asp-for="@Model.Title">
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                    <input class="form-control" type="hidden" asp-for="@Model.Id">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Subtitle">Subtitle</label>
                    <input class="form-control" asp-for="@Model.Subtitle">
                    <span asp-validation-for="@Model.Subtitle" class="text-danger"></span>
                    <input class="form-control" type="hidden" asp-for="@Model.Id">
                </div>
                <button type="submit" class="btn btn-success">Update</button>
                <button type="submit" class="btn btn-dark" asp-controller="AboutOption" asp-action="Index">Back to List</button>
            </form>
        </div>
    </div>
</div>
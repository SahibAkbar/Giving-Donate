@model Setting
@{ ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml"; }

@{
    if (TempData["Erroor"] != null)
    {
        <div class="col-lg-3 alert alert-danger">
            <p>@(TempData["Erroor"]as string)</p>
        </div>
        TempData["Erroor"] = null;
    }
}

<div class="container">
    <div class="row my-5">
        <div class="col-lg-12 my-5">
            <form asp-area="Admin" asp-controller="Setting" asp-action="Update" method="post" enctype="multipart/form-data">
                @{ if (TempData["SettingError"] != null)
                    {
        <p style="font-size: 20px !important;" class="alert alert-danger">@TempData["SettingError"]</p> TempData["SettingError"] = null;
    } }

                <div class="mb-3">
                    <label asp-for="@Model.LogoFile" class="form-label">Choose Logo</label>
                    <input class="form-control" asp-for="@Model.LogoFile">
                    <span class="text-danger" asp-validation-for="@Model.LogoFile"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Phone" class="form-label" style="font-weight: bold; font-size: 20px; color: #223e9c;">Phone</label>
                    <input class="form-control" asp-for="@Model.Phone" rows="7">
                    <span class="text-danger" asp-validation-for="@Model.Phone"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label" style="font-weight: bold; font-size: 20px; color: #223e9c;">Email</label>
                    <input class="form-control" asp-for="@Model.Email">
                    <span class="text-danger" asp-validation-for="@Model.Email"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Adress" class="form-label" style="font-weight: bold; font-size: 20px; color: #223e9c;">Address</label>
                    <input class="form-control" asp-for="@Model.Adress">
                    <span class="text-danger" asp-validation-for="@Model.Adress"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.IframeLink" class="form-label" style="font-weight: bold; font-size: 20px; color: #223e9c;">Iframe Src</label>
                    <textarea class="form-control" asp-for="@Model.IframeLink" rows="7"></textarea>
                    <span class="text-danger" asp-validation-for="@Model.IframeLink"></span>
                </div>


                <input type="hidden" asp-for="@Model.Id">
                <input type="hidden" asp-for="@Model.Logo">

                <button type="submit" class="btn btn-primary">Update</button>
                <button type="submit" class="btn btn-dark" asp-controller="Setting" asp-action="Index">Back to List</button>
            </form>
        </div>
    </div>
</div>


@model List<HomeSlider>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="HomeSlider" asp-action="Create">Create</a>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead style="text-align:center;">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">SubTitle</th>
                        <th scope="col"><i class="icon-note menu-icon"></i></th>
                    </tr>
                </thead>
                <tbody>

                    @for (int i = 1; i < Model.Count + 1; i++)
                    {
                    <tr style="position:relative">
                        <th scope="row" style="vertical-align:middle;">@i</th>
                        <td><img src="~/Uploads/@Model[i - 1].Image" style="width: 100px" alt="Alternate Text" /></td>
                        <td>@Model[i - 1].Title</td>
                        <td>@Model[i - 1].SubTitle</td>
                        <td>
                            <a class="btn btn-success" asp-area="admin" asp-controller="HomeSlider" asp-action="Update" asp-route-id="@Model[i - 1].Id">Update</a>
                            <a class="btn btn-danger" asp-area="admin" asp-controller="HomeSlider" asp-action="Delete" asp-route-id="@Model[i - 1].Id" onclick="return confirm('Are you sure?')">Delete</a>

                        </td>
                    </tr>}

                </tbody>
            </table>
        </div>
    </div>
</div>


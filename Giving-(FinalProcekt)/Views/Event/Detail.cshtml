@model VmEvent
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Banner start -->
<section>
    <div class="banner">
        <div class="bg-image" style="background-image: url(/Uploads/@Model.Banner.Image);">
            <div class="wpb-wraper">
            </div>
        </div>
    </div>
    <div class="banner-title">
        <div class="container">
            <div class="row">
                <div class="pens">
                    <div class="left">
                        <h3>
                            <a asp-controller="Event" asp-action="Detail">Event Detail</a>
                        </h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Banner End -->
<!-- EventDetails section start -->
<div class="eventdetail-content">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-md-8 col-lg-8">
                <div class="site-main">
                    <div class="media-post">
                        <img src="~/Uploads/@Model.Event.Image" alt="">
                    </div>
                    <div class="event-header">
                        <h2 class="entry-title">@Model.Event.Title</h2>
                        <div class="meta-info">
                            <div class="event-local">
                                <i class="fas fa-map-marker-alt"></i>
                                @Model.Event.Address
                            </div>
                            <div class="event-date">
                                <i class="fas fa-calendar-alt"></i>
                                @Model.Event.CreatedDate
                            </div>
                        </div>
                    </div>
                    <div class="detail-content">
                        <p class="entry-excerpt">@Model.Event.Content</p>
                        <p>@Model.Event.Content</p>
                        <div class="galery">
                            <div class="row">
                                <div class="galery-item">
                                    <div class="galery-icon">
                                        <img src="assets/img/Event/6.png" alt="">
                                    </div>
                                </div>
                                <div class="galery-item">
                                    <div class="galery-icon">
                                        <img src="assets/img/Event/4.jpg" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="event-map">
                        <div class="no-scroll-layer">
                            <iframe src="@Model.Event.IframeLink" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                        </div>
                    </div>
                    @*<div class="social-share">
                        <span class="share">Share:</span>
                        <a href="https://www.facebook.com">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="https://www.twitter.com">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="https://www.google.com">
                            <i class="fab fa-google-plus-g"></i>
                        </a>
                        <a href="https://www.pinterest.com/">
                            <i class="fab fa-pinterest"></i>
                        </a>
                    </div>*@
                </div>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-3 col-md-offset-1">
                <div class="widget-area">
                    <div class="widget">
                        <div class="widget-post">
                            <h3 class="wg-title">Recently Added Event</h3>
                            <div class="cms-item">
                                <div class="entry-media">
                                    <img src="~/Uploads/@Model.Relevent.Image" alt="">
                                </div>
                                <div class="item-content">
                                    <h4 class="entry-title">
                                        <a asp-controller="Event" asp-action="Detail" asp-route-id="@Model.Event.Id">@Model.Event.Title</a>
                                    </h4>
                                    <div class="descrp">
                                        @(Model.Event.Content!= null && Model.Event.Content.Length > 200 ? Model.Event.Content.Substring(0, 200) + "  ... " : Model.Event.Content)
                                    </div>
                                    <ul class="meta">
                                        <li class="event-local">
                                            <i class="fas fa-map-marker-alt"></i>
                                            @Model.Event.Address
                                        </li>
                                        <li class="event-date">
                                            <i class="fas fa-calendar-alt"></i>
                                            @Model.Event.CreatedDate.ToString("mmmm/dd/yyyy")
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="past-event">
                        <div class="past-post">
                            <h3 class="wg-title">Past Events</h3>
                            <div class="row">
                                @{
                                    foreach (var item in Model.PastEvents)
                                    {
                                        <div class="recent-item">
                                            <div class="media">
                                                <img src="~/Uploads/@item.Image" alt="">
                                            </div>
                                            <div class="itemcontent">
                                                <div class="entry-title">
                                                    <a asp-controller="Event" asp-action="Detail" asp-route-id="@Model.Event.Id">@Model.Event.Title</a>
                                                </div>
                                            </div>
                                        </div>

                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="widget-tag">
                        <h3 class="wg-title">Tags Events</h3>
                        <div class="tagcloud">
                            @foreach (var item in ViewBag.tags)
                            {
                                <a asp-controller="Event" asp-action="Index" asp-route-tagId="@item.Id">@item.Name</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- EventDetails section end -->
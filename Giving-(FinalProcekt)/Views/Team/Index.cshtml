@model VmVolunteer
@{
    ViewData["Title"] = "Index";
}
<!-- Banner start -->
<section>
    <div class="banner">
        <div class="bg-image" style="background-image: url(/Uploads/@Model.Banner.Image);">
            <div class="wpb-wraper">
            </div>
        </div>
    </div>
    <div class="banner-title">
        <div class="container">
            <div class="row">
                <div class="pens">
                    <div class="left">
                        <h3>
                            <a asp-controller="Team" asp-action="Index">Team</a>
                        </h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Banner End -->
<!-- Our volunters start -->
<section>
    <div class="volunteers">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="content u-fade-type-down js-scroll-trigger">
                        <h3 class="title-h">OUR <em>VOLUNTEERS</em></h3>
                        <p class="title-p">Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum.</p>
                        @*<a href="#">Become a volunteer</a>*@
                    </div>
                    <div class="team">
                        <div class="container">
                            <div class="row">
                                @foreach (var item in Model.Volunteers)
                                {
                                    <div class="item col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                        <div class="volunteer-inner u-fade-type-down js-scroll-trigger">
                                            <div class="thumb-wrap">
                                                <img src="~/Uploads/@item.Image" alt="">
                                                <div class="ciricle-wrap">
                                                    <div class="ciricle-inner">
                                                        <div class="pos-rev" style="z-index:2;">
                                                            <span>@item.Experience</span>
                                                            years exp
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="intro-wrap">
                                                <h3>@item.Name</h3>
                                                <p>@item.Position</p>
                                                <a asp-controller="Team" asp-action="Detail" asp-route-id="@item.Id">View profile</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Our volunters end -->
